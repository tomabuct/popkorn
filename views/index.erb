<html>
<head>
  <title>Popkorn</title>
  <link rel="stylesheet" type="text/css" href="css/style.css">
  <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
  <!-- dropbox chooser -->
  <script type="text/javascript" src="https://www.dropbox.com/static/api/1/dropbox.js" id="dropboxjs" data-app-key="01asumvjw1hu65w"></script>
  <!-- button listener -->
  <script type="text/javascript">
  function goto_view_page(url) {
    timestamp = new Date().getTime()
    url = escape(url || $('#video_url_box').val())
    window.location.href = '/play?url=' + url + '&session_id=' + timestamp
  }
$(document).ready(function() {
